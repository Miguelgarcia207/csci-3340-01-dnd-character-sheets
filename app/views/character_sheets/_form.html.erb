<%= form_with(model: character_sheet, html: { contents: true }) do |form| %>
  <% if character_sheet.errors.any? %>
    <div class="alert alert--negative flex flex-col gap-half mbe-4" role="alert">
      <h2 class="font-medium leading-none"><%= pluralize(character_sheet.errors.count, "error") %> prohibited this character_sheet from being saved:</h2>

      <ul class="text-sm mis-3" style="list-style: disc">
        <% character_sheet.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :name, class: "text-sm font-medium leading-none" %>
    <%= form.text_field :name, class: "input" %>
  </div>

  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :level, class: "text-sm font-medium leading-none" %>
